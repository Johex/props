<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://storage.googleapis.com/matisse/style/bootstrap.min.css">
    <script src="https://storage.googleapis.com/matisse/style/jquery-3.2.1.slim.min.js"></script>
    <link rel="stylesheet" href="/todo.css">
    <script src="https://storage.googleapis.com/matisse/style/popper.min.js"></script>
    <script src="https://storage.googleapis.com/matisse/style/bootstrap.min.js"></script>
    <title>Change or Add list</title>
</head>
<body class="background">
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">


    <!-- Links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/">Todo list</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="archive">Archive</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="add">Change or add a list</a>
        </li>
    </ul>
</nav>

<!--archived list-->
<div class="container">
    <h1 class="text-center display-4">Change or add a list</h1>
    <div class="row">
        <div class="col">
            <form action="/newtotable" method="POST">
                <div class="form-group">
                    <label for="addTable">Add a new list:</label>
                    <input type="text" class="form-control" name="addTable" required>
                </div>
            <button type="submit" class="btn btn-default">Add list</button>
            </form>
            <br><br>
            <form action="/usetable" method="POST">
                <% for(var i = 0; i < tableList.length; i++) {%>
                <div class="radio">
                    <label><input type="radio" name='radioTable' value="<%= tableList[i] %>" required><%= tableList[i] %></label>
                </div>
                <% }%>
                <button type="submit" value="use" name="useDeleteButton" class="btn btn-default">Use</button>
                <button type="submit" value="delete" name="useDeleteButton" class="btn btn-danger">Delete</button>

            </form>
        </div>
    </div>
</div>



<!--Enable popover-->
<script>
    $(document).ready(function(){
        $('[data-toggle="popover"]').popover();
    });
</script>

</body>
</html>